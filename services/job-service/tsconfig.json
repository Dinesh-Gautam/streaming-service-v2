{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "es2021"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@job-service/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../packages/message-queue/src/test.mock.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}