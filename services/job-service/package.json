{
  "name": "job-service",
  "version": "1.0.0",
  "description": "Job Management Microservice",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --watch src --exec ts-node -r tsconfig-paths/register src/main.ts",
    "dev:turbo": "turbo run dev",
    "build": "tsc && tsc-alias",
    "docker:dev": "docker-compose up --build --watch",
    "docker:down": "docker-compose down",
    "test": "jest --passWithNoTests --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@monorepo/core": "workspace:*",
    "@monorepo/database": "workspace:*",
    "@monorepo/logger": "workspace:*",
    "@monorepo/message-queue": "workspace:*",
    "amqplib": "^0.10.3",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "mongodb": "^6.5.0",
    "reflect-metadata": "^0.2.1",
    "tsc-alias": "^1.8.16",
    "tsyringe": "^4.8.0",
    "zod": "^3.25.76"
  }
}
