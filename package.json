{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "docker:dev": "docker compose up --build --watch",
    "docker:dev:workers": "pnpm run docker:dev job-service thumbnail-worker transcoding-worker subtitle-worker ai-worker",
    "dev:frontend": "pnpm --filter=frontend dev",
    "dev:workers": "docker compose up -d mongo rabbitmq && pnpm run dev:packages && pnpm run dev:jov-service && pnpm run dev:thumbnail-worker",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:packages": "pnpm run dev --filter=\"./packages/**\"",
    "dev:job-service": "pnpm run dev --filter=job-service",
    "dev:thumbnail-worker": "pnpm run dev --filter=thumbnail-worker",
    "build:packages": "turbo build --filter=\"./packages/**\"",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build",
    "docker:down": "docker compose down",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.3.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.15.1"
}
