{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "docker:dev": "docker compose up --build --watch",
    "docker:dev:workers": "pnpm run docker:dev job-service thumbnail-worker transcoding-worker subtitle-worker ai-worker",
    "docker:dev:all": "pnpm run docker:dev job-service thumbnail-worker transcoding-worker subtitle-worker ai-worker auth-service",
    "dev:frontend": "pnpm --filter=frontend dev:",
    "dev:all": "npm-run-all --parallel dev:frontend docker:dev:all",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:packages": "pnpm run dev --filter=\"./packages/**\"",
    "dev:job-service": "pnpm run dev --filter=job-service",
    "build:packages": "turbo build --filter=\"./packages/**\"",
    "docker:build:prod": "docker compose -f docker-compose.prod.yml build",
    "docker:up:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose down",
    "docker:down:prod": "docker compose -f docker-compose.prod.yml down",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.15.1"
}
