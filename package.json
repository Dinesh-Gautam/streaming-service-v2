{
  "name": "monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:packages": "turbo build --filter=\"./packages/**\""
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.3.2",
    "turbo": "^2.5.6"
  },
  "packageManager": "pnpm@10.15.1"
}
